block content
  h2#header2 A침adir Nuevo Agente SNMP
  script.
    $(document).ready(function() {
      $(".lds-roller").hide();
      $('#form2').hide();
      
      //Cuando se va a guardar el agente snmp verificado en la base de datos
      $('#form2').submit( function(ev) {
        ev.preventDefault();
        //later you decide you want to submit
        $("#ip_agente2").val($("#ip_agente1").val());
        $("#community2").val($("#community1").val());
        $(this).unbind('submit').submit()
      });
      
      //Cuando se va a verificar el agente snmp
      $('#form1').on('submit', function (e) {
      // keep the form from submitting synchronously
          $('#submit1').prop('disabled', true);
          $(".lds-roller").show();
          e.preventDefault();
          //window.location = this.href;
          var $form = $(e.currentTarget);

      // submit via ajax
        $.ajax({
          url: $('#form1').attr('action'),
          method: $('#form1').attr('method'),
          data: $('#form1').serialize()
        })
        .done(function (response) {
          $("#header2").text("Informaci칩n del nuevo agente SNMP");
          $('#form1').hide();
          $(".lds-roller").hide();
          $('#form2').show();
          
          var eachrow = "<tr>"
                      + "<td>sysName</td>"
                      + "<td>" + response['sysName'] + "</td>"
                      + "</tr><tr>"
                      + "<td>sysDescr</td>"
                      + "<td>" + response['sysDescr'] + "</td>"
                      + "</tr><tr>"
                      + "<td>ifDescr</td>"
                      + "<td>" + response['ifDescr'] + "</td>"
                      + "</tr>";
          $('#tbody').append(eachrow);
        })
        .fail(function(error){
          $('#submit1').prop('disabled', false);
          $(".lds-roller").hide();
          console.log('failed: ', arguments);
          if(error.responseText == 'showAlert'){
            alert("No se pudo establecer comunicaci칩n con el agente SNMP");
          }
        })
      });
    });
  form(method="POST", action="/nuevo_agente", id="form1")
      center
          div(class="form-group")
              label(for="ip_agente") IP: 
              input(type="text", name="agente[ip]", id="ip_agente1", placeholder="x.x.x.x/x",class="form-control texto")
          div(class="form-group") 
              label(for="community") Comunidad: 
              input(type="text", name="agente[community]", id="community1", placeholder="Comunidad",class="form-control texto")
          div
              input(type="submit", value="Verificar Conexi칩n", class="btn btn-danger", id="submit1")
