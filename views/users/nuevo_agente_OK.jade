block content
  h2 Añadir Nuevo Agente SNMP
  //form(action="/nuevo_agente", method="POST")
  script.
      function myFunction() {
          event.preventDefault(); // Stops browser from navigating away from page
          var data;
          data = $(this).parent().html();
          // build a json object or do something with the form, store in data
          $.post('/nuevo_agente', data, function(resp) {
              alert(resp);
              // do something when it was successful
          });
      }
  form(onsubmit="myFunction()")
      center
          div(class="form-group")
              label(for="ip_agente") IP: 
              input(type="text", name="ip_agente", id="ip_agente", placeholder="x.x.x.x/x",class="form-control texto")
          div(class="form-group") 
              label(for="community") Comunidad: 
              input(type="text", name="community", id="community", placeholder="Comunidad",class="form-control texto")
          div
              input(type="submit", value="Agregar", class="btn btn-danger")
